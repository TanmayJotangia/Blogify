<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="600px"/>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <h5>By:- <%= blog.createdBy.fullName %></h5>
    </div>

    <div class="container mt-3">
        <h6>Comments (<%= comments.length %>)</h6>
       <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mt-3">
                <input type="text" name="content" class="form-control" id="comment" aria-describedby="comment" placeholder="Enter your comment"/>
                <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
            </div>
       <% } %>
        </form>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
                <%= comment.createdBy.fullName%>:<pre><%= comment.content %></pre>
             </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>

</body>
</html>