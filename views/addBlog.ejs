<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mt-3">
                <label for="coverImage" class="form-lable">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
            </div>
            <div class=" mt-3">
                <label for="title" class="form-lable">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
            </div>
            <div class=" mt-3">
                <label for="body" class="form-lable">Body</label>
                <textarea class="form-control" placeholder="Write your blog !" id="body" name="body"></textarea>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>